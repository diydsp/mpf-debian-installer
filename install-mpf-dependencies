#!/bin/bash

# always exit on error
set -e

echo "[MPF Installer] Install packages using apt-get"
apt-get update
apt-get -y install python3 python3-pip build-essential zlib1g-dev libjpeg-dev

echo "[MPF Installer] Updating python environment via pip"
pip3 install --upgrade pillow setuptools pip

echo "[MPF Installer] Remove pip to prevent confusion with apt-get"
apt-get -y remove python3-pip

